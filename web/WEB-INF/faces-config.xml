<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <managed-bean>
        <managed-bean-name>db</managed-bean-name>
        <managed-bean-class>beans.OpDB</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>userBean</managed-bean-name>
        <managed-bean-class>beans.UserBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    //用户登录
    <managed-bean>
        <managed-bean-name>signInBean</managed-bean-name>
        <managed-bean-class>beans.SignInBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>user</property-name>
            <value>#{userBean}</value>
        </managed-property>
        <managed-property>
            <property-name>db</property-name>
            <value>#{db}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>signUpBean</managed-bean-name>
        <managed-bean-class>beans.SignUpBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>db</property-name>
            <value>#{db}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>topicListBean</managed-bean-name>
        <managed-bean-class>beans.TopicListBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>db</property-name>
            <value>#{db}</value>
        </managed-property>
        <managed-property>
            <property-name>user</property-name>
            <value>#{userBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>topicBean</managed-bean-name>
        <managed-bean-class>beans.TopicBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>replyBean</managed-bean-name>
        <managed-bean-class>beans.ReplyBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>db</property-name>
            <value>#{db}</value>
        </managed-property>
    </managed-bean>
        
    <!--主页跳转-->
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>show</from-outcome>
            <to-view-id>/topicList.xhtml</to-view-id>
        </navigation-case>
        //登录成功
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/topicList.xhtml</to-view-id>
        </navigation-case>
        //登录失败
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/signIn.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!--查看主题界面的跳转-->
    <navigation-rule>
        <from-view-id>/topicList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>notSignIn</from-outcome>
            <to-view-id>/signIn.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>signIned</from-outcome>
            <to-view-id>/publishTopic.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
        
    <!--注册界面的跳转-->
    <navigation-rule>
        //注册成功
        <from-view-id>/signUp.xhtml</from-view-id>
        <navigation-case>
            <from-ourcom>success</from-ourcom>
            <to-view-id>/signIn.xhtml</to-view-id>
        </navigation-case>
        //注册失败
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/signUp.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
        
    <!--登录界面的跳转-->
    <navigation-rule>
        //跳到欢迎界面
        <from-view-id>/signIn.xhtml</from-view-id>
        //登录成功
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/topicList.xhtml</to-view-id>
        </navigation-case>
        //登录失败
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/signIn.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!--发表文章界面跳转-->
    <navigation-rule>
        <from-view-id>/topicPublish.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/topicList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/topicPublish.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
